{
	"name": "responsive-web-design",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"start": "SET DEBUG=responsive-web-design:* & nodemon ./bin/www --ignore public/ --ignore views/ --ignore performance/",
		"css:minify": "npx postcss ./public/stylesheets/unminified/*.css --dir ./public/stylesheets/minified/ --ext .min.css",
		"css:minify:watch": "npx postcss ./public/stylesheets/unminified/*.css --dir ./public/stylesheets/minified/ --ext .min.css --watch",
		"js:minify": "npx babel public/javascripts/unminified/ -d public/javascripts/minified/ --out-file-extension .min.js",
		"js:minify:watch": "npx babel public/javascripts/unminified/ -d public/javascripts/minified/ --out-file-extension .min.js --watch",
		"lighthouse:test": "npx lighthouse http://localhost:4200 --preset=desktop --output=\"json\" --output-path=./performance/report.json"
	},
	"dependencies": {
		"cookie-parser": "~1.4.4",
		"debug": "~2.6.9",
		"ejs": "^3.1.8",
		"express": "^4.18.2",
		"http-errors": "~1.6.3",
		"morgan": "~1.9.1",
		"serve-index": "^1.9.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.20.7",
		"@babel/core": "^7.20.7",
		"@babel/preset-env": "^7.20.2",
		"babel-preset-minify": "^0.5.2",
		"cssnano": "^5.1.14",
		"eslint": "^8.27.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.5.1",
		"eslint-plugin-promise": "^6.1.1",
		"lighthouse": "^9.6.8",
		"nodemon": "^2.0.20",
		"postcss": "^8.4.20",
		"postcss-cli": "^10.1.0"
	}
}
